<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/frmBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_border_tv">

        <ImageView
            android:id="@+id/imgPhotoEditorImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />
    </FrameLayout>

    <ImageView
        android:id="@+id/imgPhotoEditorClose"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="top|start"
        android:elevation="1dp"
        android:src="@drawable/sticker_ic_close" />

    <ImageView
        android:id="@+id/imgPhotoEditorRotation"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="bottom|start"
        android:elevation="1dp"
        android:src="@drawable/sticker_ic_reset_rotation" />

    <ImageView
        android:id="@+id/imgPhotoEditorScale"
        android:layout_width="17dp"
        android:layout_height="20dp"
        android:layout_gravity="bottom|end"
        android:clickable="true"
        android:elevation="1dp"
        android:src="@drawable/sticker_ic_scale" />

    <ImageView
        android:id="@+id/imgPhotoEditorFlip"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="top|end"
        android:elevation="1dp"
        android:src="@drawable/sticker_ic_flip" />
</FrameLayout>